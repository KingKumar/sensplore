<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/goto_kinetics"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/kinetics_test" />
    <Button
        android:id="@+id/goto_poll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/sensor_poll" />

    <Button
        android:id="@+id/goto_orientation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/orientation_readout" />

    <Button
        android:id="@+id/goto_flipup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/flipup_detect" />
    


</LinearLayout>